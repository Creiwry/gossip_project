<% if flash.any? %>
  <% flash.each do |type, msg| %>
    <div class="alert alert-warning" data-turbo-permanent>
      <%= msg %>
    </div>
  <% end %>
<% end %>


<h1>Form</h1>


<div>
<%= form_tag url_for(action: 'create'),
             method: 'post' do %>

    <%= label_tag 'Title' %>
    <br />
    <%= text_field_tag 'title', @gossip.title || 'title' %>
    <br /> <br />

    <%= label_tag 'Content' %>
    <br />
    <%= text_area_tag 'content', 'content' %>
    <br />
    <%= label_tag 'Tag' %>
    <br />
    <%= select_tag 'tag_id', options_for_select(@tags.collect{ |u| [u.title, u.id] }), { include_blank: "None" }  %>
    <br /> <br />

    <%= submit_tag 'Create Gossip' %>

  <% end %>
</div>
