

<% if flash.any? %>
  <% flash.each do |type, msg| %>
    <div class="alert alert-warning" data-turbo-permanent>
      <%= msg %>
    </div>
  <% end %>
<% end %>


<h1>Form</h1>

<%= form_with(model: @comment, url: "/gossips/#{@comment.gossip_id}/comments/#{@comment.id}") do |comment| %>

  <div class="form-group">
    <label>Content</label>
    <%= comment.text_area :content, class: 'form-control'%>
  </div>
  <div class="form-group">
    <button type="submit">Edit</button>
    </br>
    <%= link_to 'Destroy', gossip_comment_path(gossip_id: @comment.gossip_id, id: @comment.id), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  </div>
<% end %>


