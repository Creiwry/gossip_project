<% flash.each do |type, msg| %>
  <div class="alert alert-success">
    <%= msg %>
  </div>
<% end %>

<h1>Log In</h1>


<div>
<%= form_tag url_for(action: 'create'),
             method: 'post' do %>

    <%= label_tag 'Email' %>
    <br />
    <%= text_field_tag 'email', 'email' %>
    <br /> <br />

    <%= label_tag 'Password' %>
    <br />
    <%= text_field_tag 'password', 'password' %>
    <br />

    <%= submit_tag 'Log in' %>

  <% end %>
</div>

