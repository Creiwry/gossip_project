
<h1> <%= @city.name %> </h1>
<p>Gossip:</p>

<div class="container text-center">
  <div class="row row-cols-4">
    <% @users.each do |id| %>
      <% Gossip.where(user_id: id).each do |gossip|%>

        <div class="col card text-white bg-info mb-3 mr-3" style="max-width: 18rem;">
          <div class="card-header">By: <%= User.find_by(id: gossip.user_id).first_name %></div>
          <div class="card-body">
            <h5 class="card-title"><%= gossip.title %></h5>
            <p class="card-text"><%= link_to 'See more', gossip_path(gossip.id) %></p>
          </div>
        </div>

      <% end %>
    <% end %>
  </div>
</div>
