<% flash.each do |type, msg| %>
  <div class="alert alert-danger" data-turbo-permanent>
    <%= msg %>
  </div>
<% end %>

<h1>Edit Profile</h1>

<%= form_with(model: @user, url: "/users/#{@user.id}") do |user| %>

  <div class="form-group">
    <div class="form-group">
      <label>Age</label>
      <%= user.text_field :age, class: 'form-control'%>
    </div>
  <div class="form-group">
    <label>Description</label>
    <%= user.text_area :description, class: 'form-control'%>
  </div>
  <div>
    <button type="submit">Edit</button>
  </div>
<% end %>
