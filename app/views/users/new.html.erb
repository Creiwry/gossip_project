<% flash.each do |type, msg| %>
  <div class="alert alert-success">
    <%= msg %>
  </div>
<% end %>

<h1>Register</h1>


<div>
<%= form_tag url_for(action: 'create'),
             method: 'post' do %>

    <%= label_tag 'First name' %>
    <br />
    <%= text_field_tag 'first_name', 'First name' %>
    <br /><br />

    <%= label_tag 'Last name' %>
    <br />
    <%= text_field_tag 'last_name', 'Last name' %>
    <br /><br />

    <%= label_tag 'Email' %>
    <br />
    <%= text_field_tag 'email', 'Email' %>
    <br /><br />

    <%= label_tag 'City' %>
    <br />
    <%= select_tag 'city_id', options_for_select(@cities.collect{ |u| [u.zip_code, u.id] })  %>
    <br /> <br />

    <%= label_tag 'Password' %>
    <br />
    <%= text_field_tag 'password', 'password' %>
    <br /><br />

    <%= label_tag 'Confirm password' %>
    <br />
    <%= text_field_tag 'password_confirmation', 'confirm password' %>
    <br /><br />

    <%= submit_tag 'Register' %>

  <% end %>
</div>
